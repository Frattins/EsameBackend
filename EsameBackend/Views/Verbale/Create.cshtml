@model EsameBackend.Models.Verbale

<h1>Create Verbale</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Idanagrafica" class="control-label">Anagrafica</label>
        <select asp-for="Idanagrafica" class="form-control" asp-items="@(new SelectList(ViewBag.Anagrafiche, "Idanagrafica", "Cognome"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Idviolazione" class="control-label">Violazione</label>
        <select asp-for="Idviolazione" class="form-control" asp-items="@(new SelectList(ViewBag.TipoViolazioni, "Idviolazione", "Descrizione"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="DataViolazione" class="control-label"></label>
        <input asp-for="DataViolazione" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IndirizzoViolazione" class="control-label"></label>
        <input asp-for="IndirizzoViolazione" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Nominativo_Agente" class="control-label"></label>
        <input asp-for="Nominativo_Agente" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Importo" class="control-label"></label>
        <input asp-for="Importo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DecurtamentoPunti" class="control-label"></label>
        <input asp-for="DecurtamentoPunti" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
